<%= render 'layouts/error_message', model: @user %>
<div class="container">
                  <div class="row">
                      <div class="col-xs-4 ">
                                <h2 class="form-header-title">User info</h2>
                            <div class="form-body">
                              <%= form_for(@user) do |f| %>
                                 <h4>Name</h4>
                                  <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前"%>
                                    <h4>Image</h4>
                                    <%= f.attachment_field :profile_image %>
                                    <h4>Introduction</h4>
                                    <%= f.text_field :introduction, autofocus: true, class:"form-control", placeholder:"自己紹介"%>
                                <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                                    <% end %>
        </div>
      </div>
  </div>
</div>
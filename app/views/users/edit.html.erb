<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">      
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-4 col-md-offset-4">
                          <div class="form-user style-1 rounded has-shadow-1"> 
                            <div class="form-header text-center">
                                <h2 class="form-header-title">プロフィール編集</h2>
                            </div>
                            <div class="form-body">
                              <%= form_for(@user) do |f| %>
                                <div class="form-group has-icon">
                                 <label class="control-label sr-only" for="inputEmail"><h4>Name</h4></label>
                                  <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
                                    <label class="control-label sr-only" for="inputEmail"><h4>Image</h4></label>
                                    <%= f.attachment_field :profile_image %>
                              <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                                </div>
                                <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                                    <% end %>
                            </div>
                          </div> 
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>
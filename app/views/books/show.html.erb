<%= flash[:book_edit] %>
<%= flash[:book] %>
<%= flash.now[:book_new] %>
<%= render 'books/index', book: @aaa %>
<div class="col-xs-9">
	<h2>Book detail<h2>
<table class="table table-hover table-inverse">
	<tbody>
		<tr>
			<th colspan="3">
		</tr>
		<tr>
			<td><%= link_to(@user) do %>
			<%= attachment_image_tag @user, :profile_image, :fill, 40, 40 %><br>
			<%= @user.name %></td>
			<% end %>
	<td><%= @book.title %></td>
	<td><%= @book.body %></td>
	<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
	<td><%= link_to "Destroy" , book_path(@book.id) , method: :delete, "data-confirm" => "Are you sure?"  %></td>
</tr>
</tbody>
</table>
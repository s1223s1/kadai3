<section class="slice slice-lg sct-color-1">
	<div class="container">
	<div class="row">
		<div class="col-lg-4">
		</div>
		<div class="col-lg-8">
<table class="table table-striped">
	<div class="text-center">
<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>

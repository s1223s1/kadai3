<div class="col-xs-3">
<h2>User info</h2>
<div>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100 %>
</div>
<div class="profile-container">
	<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>Name</th><th><%= @user.name %></th>
		</tr>
		<tr>
			<th>Introduction</th><th><%= @user.introduction %></th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<tr>
	      <td><%= link_to "編集", edit_user_path(current_user) %></td>
	</tr>
	</tbody>
</table>

</div>
	<h2>New book</h2>
	 <%= form_for book, url: books_path do |f| %>
	 <% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% book.errors.full_messages.each do |book| %>
                <li><%= book %></li>
            <% end %>
        </ul>
    </div>
<% end %>
	<h4>title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<h4><%= f.submit 'Create Book' %></h4>
	<% end %>
</div>
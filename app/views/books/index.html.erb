<%= flash[:book] %>
<h1>Books</h1>
	<table>
	<thead>
	<tr>
	<th>Title</th>
	<th>Body</th>
	</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show" , book_path(book.id) %></td>
		<td><%= link_to "Edit" , edit_book_path(book.id) %></td>
		<td><%= link_to "Destroy" , book_path(book.id) , method: :delete, "data-confirm" => "Are you sure?"  %></td>
	</tr>
		<% end %>
	</tbody>
	</table>

	<h2>New book</h2>
	 <%= form_for @book, url: books_path do |f| %>
	 <% if @book.errors.any? %>
    <div class = "alert alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |book| %>
                <li><%= book %></li>
            <% end %>
        </ul>
    </div>
<% end %>
	<h4>title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<h4><%= f.submit 'Create Book' %><h4>
	<% end %>